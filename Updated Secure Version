import streamlit as st
import sqlite3
import pandas as pd
from PIL import Image
import io
import base64
import hashlib

# =========================
# DATABASE SETUP
# =========================
conn = sqlite3.connect('crochet_shop.db')
c = conn.cursor()

# Create products table
c.execute('''CREATE TABLE IF NOT EXISTS products (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    price REAL,
    description TEXT,
    category TEXT,
    image BLOB
)''')

# Create admin user table
c.execute('''CREATE TABLE IF NOT EXISTS admin_users (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    username TEXT UNIQUE,
    password TEXT
)''')
conn.commit()

# =========================
# HELPER FUNCTIONS
# =========================
def hash_password(password: str) -> str:
    """Return SHA-256 hashed password."""
    return hashlib.sha256(password.encode()).hexdigest()

def insert_admin_user(username, password):
    """Insert a new admin user with hashed password."""
    hashed_pw = hash_password(password)
    try:
        c.execute("INSERT INTO admin_users (username, password) VALUES (?, ?)", (username, hashed_pw))
        conn.commit()
    except sqlite3.IntegrityError:
        pass  # User already exists

def verify_admin(username, password):
    """Verify admin credentials securely."""
    hashed_pw = hash_password(password)
    c.execute("SELECT * FROM admin_users WHERE username=? AND password=?", (username, hashed_pw))
    return c.fetchone()

def insert_product(name, price, description, category, image_bytes):
    c.execute("INSERT INTO products (name, price, description, category, image) VALUES (?, ?, ?, ?, ?)",
              (name, price, description, category, image_bytes))
    conn.commit()

def get_products():
    c.execute("SELECT * FROM products")
    return c.fetchall()

def delete_product(product_id):
    c.execute("DELETE FROM products WHERE id=?", (product_id,))
    conn.commit()

def update_product(product_id, name, price, description, category):
    c.execute("UPDATE products SET name=?, price=?, description=?, category=? WHERE id=?",
              (name, price, description, category, product_id))
    conn.commit()

# Create default admin account if not exists
insert_admin_user("admin", "admin123")

# =========================
# PAGE CONFIG
# =========================
st.set_page_config(page_title="KnitCraft Store ğŸ§¶", layout="wide")

# =========================
# NAVIGATION MENU
# =========================
st.sidebar.title("ğŸ§µ KnitCraft Navigation")
menu = st.sidebar.radio("Navigate", ["ğŸ  Home", "ğŸ§‘â€ğŸ’¼ Admin Login"])

# =========================
# STYLES
# =========================
st.markdown(
    """
    <style>
    body {
        background-color: #f6f8fa;
    }
    .stApp {
        background-color: #fefefe;
    }
    h1, h2, h3 {
        color: #b56576;
    }
    </style>
    """,
    unsafe_allow_html=True,
)

# =========================
# HOME PAGE
# =========================
if menu == "ğŸ  Home":
    st.title("ğŸ§¶ Welcome to KnitCraft Store")
    st.subheader("Beautiful Handmade Crochet & Knitting Items")
    st.markdown("Explore unique handmade products â€” scarves, sweaters, toys, and more!")

    products = get_products()
    if products:
        cols = st.columns(3)
        for i, product in enumerate(products):
            with cols[i % 3]:
                st.markdown(f"### {product[1]}")
                st.write(f"ğŸ’° â‚¹{product[2]}")
                st.write(f"ğŸ§µ {product[4]}")
                if product[5]:
                    img = Image.open(io.BytesIO(product[5]))
                    st.image(img, width=200)
                st.write(product[3])
                st.button("ğŸ›’ Add to Cart", key=f"cart_{product[0]}")
    else:
        st.info("No products available yet! Please add items from the admin panel.")

# =========================
# ADMIN LOGIN PAGE
# =========================
elif menu == "ğŸ§‘â€ğŸ’¼ Admin Login":
    st.title("ğŸ” Admin Panel Login")

    username = st.text_input("Username")
    password = st.text_input("Password", type="password")

    if st.button("Login"):
        admin = verify_admin(username, password)
        if admin:
            st.success(f"Welcome, {username}!")
            st.session_state["is_admin_logged_in"] = True
        else:
            st.error("Invalid credentials. Try again.")

    # Admin Section
    if st.session_state.get("is_admin_logged_in"):
        st.sidebar.success("âœ… Logged in as Admin")
        admin_menu = st.sidebar.radio("Admin Actions", ["â• Add Product", "ğŸ“‹ View Products", "âœï¸ Update / Delete", "â• Add New Admin", "ğŸšª Logout"])

        if admin_menu == "â• Add Product":
            st.header("â• Add a New Product")

            with st.form("add_form"):
                name = st.text_input("Product Name")
                price = st.number_input("Price (â‚¹)", min_value=0.0, step=10.0)
                description = st.text_area("Description")
                category = st.selectbox("Category", ["Scarf", "Sweater", "Toy", "Accessory", "Other"])
                image_file = st.file_uploader("Upload Image", type=["jpg", "png", "jpeg"])
                submitted = st.form_submit_button("Add Product")

                if submitted:
                    if name and price and description and image_file:
                        image_bytes = image_file.read()
                        insert_product(name, price, description, category, image_bytes)
                        st.success(f"âœ… {name} added successfully!")
                    else:
                        st.error("Please fill all fields and upload an image.")

        elif admin_menu == "ğŸ“‹ View Products":
            st.header("ğŸ“¦ Product Catalog")
            data = get_products()
            if data:
                df = pd.DataFrame(data, columns=["ID", "Name", "Price", "Description", "Category", "Image"])
                st.dataframe(df[["ID", "Name", "Price", "Category"]])
            else:
                st.info("No products found.")

        elif admin_menu == "âœï¸ Update / Delete":
            st.header("âœï¸ Update or Delete Products")
            data = get_products()
            if data:
                product_names = [f"{row[1]} (â‚¹{row[2]})" for row in data]
                selected = st.selectbox("Select Product", product_names)
                selected_row = data[product_names.index(selected)]
                product_id = selected_row[0]

                st.subheader("Edit Product Details")
                name = st.text_input("Product Name", selected_row[1])
                price = st.number_input("Price (â‚¹)", value=selected_row[2], step=10.0)
                description = st.text_area("Description", selected_row[3])
                category = st.text_input("Category", selected_row[4])

                if st.button("Update"):
                    update_product(product_id, name, price, description, category)
                    st.success("âœ… Product updated successfully!")

                if st.button("Delete"):
                    delete_product(product_id)
                    st.warning("ğŸ—‘ï¸ Product deleted.")
            else:
                st.info("No products to edit.")

        elif admin_menu == "â• Add New Admin":
            st.header("ğŸ§‘â€ğŸ’¼ Register a New Admin")
            new_user = st.text_input("New Admin Username")
            new_pass = st.text_input("New Admin Password", type="password")

            if st.button("Create Admin"):
                if new_user and new_pass:
                    insert_admin_user(new_user, new_pass)
                    st.success(f"âœ… New admin '{new_user}' added successfully!")
                else:
                    st.error("Please fill all fields.")

        elif admin_menu == "ğŸšª Logout":
            st.session_state["is_admin_logged_in"] = False
            st.info("You have been logged out.")
